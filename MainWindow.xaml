<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="20px"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Zadanie1A" Click="NewtonByTask"/>
            <MenuItem Header="Zadanie1B" Click="NewtonByDelegat"/>
            <MenuItem Header="Zadanie1C" Click="NewtonByAsync"/>
            <MenuItem Header="Zadanie2" Click="Fibonacci"/>
            <MenuItem Header="Zadanie3 Kompresja" Click="Compressation"/>
            <MenuItem Header="Zadanie3 Dekompresja" Click="Decompressation"/>
            <MenuItem Header="Zadanie4" Click="HostNamesToIP"/>
        </Menu>

        <ProgressBar Grid.Row="1" Name="FibonacciProgress" Minimum="0" Maximum="100"/>

    </Grid>
</Window>